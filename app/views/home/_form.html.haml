= form_tag '/receipt', class: 'form-horizontal', id: 'pd4_form'
%h4
  Чтобы сформировать квитанцию для добровольного пожертвования,
  %br/
  заполните, пожалуйста, эту форму:
.well.form_div
  .control-group.info{:style => "margin-top: 20px;"}
    %label.control-label{:for => "name"} Фамилия Имя Отчество
    = text_field_tag 'name'
    %span.help-inline Пример: Иванов Иван Иванович
  .control-group.info
    %label.control-label{:for => "bdate"} Дата рождения
    = text_field_tag 'bdate'
    %span.help-inline Пример: 01.01.1991
  .control-group.info
    %label.control-label{:for => "passp"} Паспорт: серия номер
    = text_field_tag 'passp'
    %span.help-inline Пример: 1234 567890
  .control-group.info
    %label.control-label{:for => "address"} Адрес
    = text_field_tag 'address'
    %span.help-inline Пример: Москва, Ленинский пр-т 1-1-1
  .control-group.info
    %label.control-label{:for => "amount"} Сумма пожертвования в рублях
    = text_field_tag 'amount'
    %span.help-inline Пример: 1000
  .control-group.info
    %label.control-label{:for => "citizen"} Гражданство РФ
    = check_box_tag 'citizen', 'РФ', true
    %span.help-inline
  .control-group.info
    %label.control-label
    %button#btn-make.btn.btn-primary.make-receipt.icon-file Сформировать квитанцию
    %span.help-inline
